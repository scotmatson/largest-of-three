<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
    </style>

    <style name="number_input">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/number_box</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">75sp</item>
        <item name="android:hint">@string/octothorpe</item>
        <item name="android:focusable">true</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:selectAllOnFocus">false</item>
    </style>

    <style name="calculate_numeric_input">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:textSize">23sp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
</resources>
